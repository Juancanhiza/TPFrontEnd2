<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FichaClinicaActivity"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtIdFichaClinicaItem"
            android:text="Fichas Clínicas"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btnAgregarFichaClinica"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Agregar Ficha" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/editTextFechaDesde"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Fecha desde"
            android:focusable="false"/>
        <EditText
            android:id="@+id/editTextFechaHasta"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Fecha hasta"
            android:focusable="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/selectMedico"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Médico"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/text_view_with_border"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/selectPaciente"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Paciente"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/text_view_with_border"
            android:layout_margin="2dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/selectTipoProducto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de producto"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/text_view_with_border"
            android:layout_margin="2dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnBuscar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Buscar" />
            <Button
                android:id="@+id/btnLimpiarFiltros"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Limpiar Filtros" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNoResults"
        android:text="No se encontraron resultados"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rvCategoria">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>